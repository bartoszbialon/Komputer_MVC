@model List<Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista komputerów</h1>
<a class="btn btn-primary mb-3" asp-asp-controller="Computer" asp-action="Create">Dodaj komputer</a>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Memory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].HardDrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GraphicsCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ProductionDate)
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Processor
                </td>
                <td>
                    @item.Memory
                </td>
                <td>
                    @item.HardDrive
                </td>
                <td>
                    @item.GraphicsCard
                </td>
                <td>
                    @item.ProductionDate.ToShortDateString()
                </td>
                <td>
                    <a class="btn btn-primary"
                       asp-action="Update"
                       asp-controller="Computer"
                       asp-route-id=@item.ComputerId>Edytuj</a>
                    <a class="btn btn-primary mt-1"
                       asp-action="Details"
                       asp-controller="Computer"
                       asp-route-id=@item.ComputerId>Szczegóły</a>
                    <a class="btn btn-primary mt-1"
                       asp-action="Delete"
                       asp-controller="Computer"
                       asp-route-id=@item.ComputerId>Usuń</a>
                </td>
            </tr>
        }

    </table>
}